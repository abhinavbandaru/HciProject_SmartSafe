<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" android:id="@+id/appLayout">
    <Button
        android:id="@+id/panic_button"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/round_panic_button"
        android:elevation="40dp"
        android:scaleType="fitCenter"
        android:text="sos"
        android:textColor="#FFF"
        android:textSize="70sp"
        android:layout_centerVertical = "true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/topBar"
        android:background="@drawable/action_bar_background">

        <ImageButton
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@drawable/action_bar_background"
            android:id="@+id/appLogo"
            android:src="@drawable/logo"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/appLogo"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:text="Smart Safe"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/dots"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/dots"
            android:layout_centerVertical="true"
            android:background="@drawable/action_bar_background"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/dots"
            android:src="@drawable/settings_icon"
            android:id="@+id/appSettings"
            android:layout_centerVertical="true"
            android:background="@drawable/action_bar_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/topBar"
        android:layout_alignParentRight="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Logout"
            android:id="@+id/logout"
            android:alpha="0"
            android:clickable="false"
            android:gravity="center"
            android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/belowBar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/action_bar_background"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/phone_icon"
            android:id="@+id/callContact"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/action_bar_background"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/messages_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/openMessages"
            android:alpha="0"
            android:clickable="false"
            android:background="@drawable/action_bar_background"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/openContacts"
            android:src="@drawable/contacts_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/action_bar_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_above="@+id/belowBar">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:id="@+id/primaryContact"
            android:src="@drawable/contact"
            android:elevation="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/contacts_background"
            android:layout_marginEnd="25dp"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/police"
            android:src="@drawable/police"
            android:elevation="5dp"
            android:layout_toEndOf="@id/primaryContact"
            android:layout_centerVertical="true"
            android:background="@drawable/contacts_background"
            android:layout_marginEnd="25dp"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ambulance"
            android:src="@drawable/ambulance"
            android:layout_toEndOf="@+id/police"
            android:elevation="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/contacts_background"
            android:layout_marginEnd="25dp"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/fire"
            android:src="@drawable/fire"
            android:elevation="5dp"
            android:background="@drawable/contacts_background"
            android:layout_toEndOf="@+id/ambulance"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"/>
    </RelativeLayout>

</RelativeLayout>